{
  "name": "Happy",
  "layout": {
    "columns": 5,
    "rows": 3
  },
  "widgets": [
    { "position": {"x": 1, "y": 0, "w": 3, "h": 1}, "widget": "vudash-widget-time" },
    { "position": {"x": 4, "y": 0, "w": 1, "h": 1}, "widget": "./widgets/health" },
    { "position": {"x": 0, "y": 1, "w": 1, "h": 1},
      "widget": "vudash-widget-ci",
      "options": {
        "provider": "travis",
        "repo": "vudash-core",
        "user": "vudash"
      }
    },
    { "position": {"x": 1, "y": 1, "w": 1, "h": 1},
      "widget": "vudash-widget-ci",
      "options": {
        "provider": "travis",
        "repo": "vudash-widget-ci",
        "user": "vudash"
      }
    },
    { "position": {"x": 2, "y": 1, "w": 1, "h": 1},
      "widget": "vudash-widget-statistic",
      "options": {
        "schedule": 1000,
        "description": "Visitor Count",
        "data-source": {
          "source": "random"
        }
      }
    },
    { "position": {"x": 3, "y": 1, "w": 1, "h": 1}, "widget": "./widgets/progress" },
    { "position": {"x": 4, "y": 1, "w": 1, "h": 1}, "widget": "./widgets/github" },

    { "position": {"x": 0, "y": 2, "w": 2, "h": 1},
      "widget": "vudash-widget-statistic",
      "options": {
        "schedule": 900000,
        "description": "EUR -> GBP",
        "data-source": {
          "source": "rest",
          "config": {
            "url": "http://api.fixer.io/latest?base=EUR",
            "method": "get",
            "graph": "rates.GBP"
          }
        }
      }
    },
    { "position": {"x": 2, "y": 2, "w": 1, "h": 1},
      "widget": "vudash-widget-gauge",
      "options": {
        "min": 0,
        "max": 100,
        "data-source": {
          "source": "random",
          "config": {
            "method": "integer",
            "options": [{ "min": 0, "max": 100 }]
          }
        }
      }
    },
    { "position": {"x": 3, "y": 2, "w": 2, "h": 1},
      "widget": "vudash-widget-statistic",
      "options": {
        "schedule": 900000,
        "description": "EUR -> USD",
        "data-source": {
          "source": "rest",
          "config": {
            "url": "http://api.fixer.io/latest?base=EUR",
            "method": "get",
            "graph": "rates.USD"
          }
        }
      }
    }
  ]
}
